
### TARGET : epcf, udmr, ausf, perf, epcf_test, test
TARGET      = epcf

## HOLDSESS : do not close session in no more read/write exist
CFLAGS      = -std=gnu99 -g -m64 -Wall -DHOLDSESS  -Wno-unused-label -Wno-missing-braces
INC_PATH    = -I. -I../../../include -I../../../libsrc/COMM
LIB_PATH    = -L../../../lib

ifeq ($(TARGET),epcf)
CFLAGS		+= -DEPCF -DLOG_LIB -DOAUTH -DPERFORM
else ifeq ($(TARGET),epcf_test)
CFLAGS		+= -DEPCF -DLOG_PRINT -DOAUTH -DTEST
else ifeq ($(TARGET),udmr)
CFLAGS		+= -DUDMR -DLOG_APP
else ifeq ($(TARGET),ausf)
CFLAGS		+= -DAUSF -DLOG_APP -DOAUTH
else ifeq ($(TARGET),perf)
CFLAGS		+= -DPERFORM -DLOG_PRINT
else ifeq ($(TARGET),test)
CFLAGS		+= -pg -DTEST -DPERFORM
endif

ifeq ($(TARGET),epcf)
LIBS        = -lcomm -lm -lpthread -ldl -lrt
else ifeq ($(TARGET),epcf_test)
LIBS        = -lcomm -lm -lpthread -ldl -lrt
else
LIBS        = -lShmQueue -lcomm -lLog -lpthread -ldl -lrt
endif
