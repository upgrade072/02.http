
### TARGET : nssf, epcf, ausf, perf, test
TARGET      = nssf

## HOLDSESS : do not close session in no more read/write exist
CFLAGS      = -std=gnu99 -g -m64 -Wall -DHOLDSESS  -Wno-unused-label -Wno-missing-braces
INC_PATH    = -I. -I../../../include -I../../../libsrc/COMM
LIB_PATH    = -L../../../lib

ifeq ($(TARGET),nssf)
CFLAGS		+= -DLOG_LIB -DOAUTH -DSTAT_SFM -DOVLD_API
else ifeq ($(TARGET),epcf)
CFLAGS		+= -DLOG_LIB -DOAUTH -DSTAT_SFM
else ifeq ($(TARGET),ausf)
CFLAGS		+= -DLOG_APP -DOAUTH
else ifeq ($(TARGET),perf)
CFLAGS		+= -DLOG_PRINT
else ifeq ($(TARGET),test)
CFLAGS		+= -pg -DTEST -DLOG_PRINT
endif

ifeq ($(TARGET),nssf)
LIBS        = -lcomm -lm -lpthread -ldl -lrt -l_noverload
else ifeq ($(TARGET),epcf)
LIBS        = -lcomm -lm -lpthread -ldl -lrt
else
LIBS        = -lShmQueue -lcomm -lLog -lpthread -ldl -lrt
endif
